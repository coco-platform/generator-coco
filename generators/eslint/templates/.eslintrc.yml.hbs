{{#if babel~}}
  parser: babel-eslint
{{/if}}
parserOptions:
  ecmaVersion: 2018
  sourceType: module
{{!-- React 上下文环境开启 --}}
{{#if react}}
  ecmaFeatures:
    jsx: true
{{/if}}
{{!-- React 上下文环境开启 --}}
{{#if context.length ~}}
env:
{{/if}}
{{#each context}}
  {{this}}: true
{{/each}}
{{#if extends.length ~}}
extends:
{{/if}}
{{#each extends}}
  - '{{this}}'
{{/each}}
rules:
  linebreak-style:
    - error
    - unix
